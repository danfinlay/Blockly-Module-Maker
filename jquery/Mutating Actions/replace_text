
//Replace Text:
Blockly.Language.jquery_replace_text = {
  helpUrl: helpUrl,
  init: function() {
    this.setColour(330);
    this.appendValueInput("newText")
        .setCheck("String")
        .appendTitle("Fill with text");
    this.setOutput(true, 'jquery_action');
    this.setTooltip('');
  }
};
Blockly.JavaScript.jquery_replace_text = function() {
  var value_newtext = Blockly.JavaScript.valueToCode(this, 'newText', Blockly.JavaScript.ORDER_NONE);
  var code = '.text('+value_newtext+')';
  
  return [code, Blockly.JavaScript.ORDER_ATOMIC];
};


