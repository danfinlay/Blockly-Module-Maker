
//jquery_select_then_ask:
Blockly.Language.jquery_select_then_ask = {
  helpUrl: 'http://www.example.com/',
  init: function() {
    this.setColour(190);
    this.appendValueInput("select")
        .setCheck("jquery_selector")
        .appendTitle("Select");
    this.appendValueInput("then")
        .setCheck("jquery_boolean_action")
        .appendTitle("then ask");
    this.setOutput(true, 'Boolean');
    this.setTooltip('');
  }
};

Blockly.JavaScript.jquery_select_then_ask = function() {
  var value_select = Blockly.JavaScript.valueToCode(this, 'select', Blockly.JavaScript.ORDER_NONE);
  var value_then = Blockly.JavaScript.valueToCode(this, 'then', Blockly.JavaScript.ORDER_NONE);
  var code = ''
  if(value_select && value_then){
    code = '$('+value_select+')'+value_then+';\n';
  }
  return code;
};

